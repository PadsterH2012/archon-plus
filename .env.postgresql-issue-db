# Archon PostgreSQL Issue Database Configuration
# Copy this file to .env and customize the values for your environment
#
# Security Note: Never commit this file with real passwords to version control!

# =============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =============================================================================

# Database connection settings
POSTGRES_DB=archon_issues
POSTGRES_USER=archon_user
POSTGRES_PASSWORD=your_very_secure_password_here_change_this

# Port configuration (using 5433 to avoid conflicts with system PostgreSQL)
POSTGRES_PORT=5433

# =============================================================================
# PGADMIN CONFIGURATION (Optional - for database management UI)
# =============================================================================

# pgAdmin web interface settings
PGADMIN_EMAIL=admin@archon.local
PGADMIN_PASSWORD=admin_secure_password_change_this
PGADMIN_PORT=5050

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Persistent storage path (already configured in docker-compose)
# POSTGRES_DATA_PATH=/mnt/network_repo/stack_dbs/postgresql/issue_db

# =============================================================================
# PERFORMANCE TUNING (Advanced)
# =============================================================================

# Memory settings (adjust based on your system resources)
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Connection settings
POSTGRES_MAX_CONNECTIONS=200

# =============================================================================
# ARCHON INTEGRATION SETTINGS
# =============================================================================

# Connection string for Archon applications
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://archon_user:your_very_secure_password_here_change_this@localhost:5433/archon_issues

# Alternative format for some applications
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5433
POSTGRESQL_DATABASE=archon_issues
POSTGRESQL_USER=archon_user
POSTGRESQL_PASSWORD=your_very_secure_password_here_change_this

# =============================================================================
# BACKUP CONFIGURATION (Future use)
# =============================================================================

# Backup settings for automated backups
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/mnt/network_repo/stack_dbs/postgresql/backups

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level for PostgreSQL
POSTGRES_LOG_LEVEL=info
POSTGRES_LOG_STATEMENT=none  # none, ddl, mod, all

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL configuration (for production)
POSTGRES_SSL_MODE=prefer  # disable, allow, prefer, require, verify-ca, verify-full
POSTGRES_SSL_CERT_PATH=""
POSTGRES_SSL_KEY_PATH=""
POSTGRES_SSL_CA_PATH=""
